@page
@model TestBookmarksDatabase.Administration.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bookmark</h4>
<hr />
<div class="row">
    <div class="col-md-4">  
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewUser.UserName" class="control-label"></label>
                <input asp-for="NewUser.UserName" class="form-control" />
                <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Email" class="control-label"></label>
                <input asp-for="NewUser.Email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.PhoneNumber"></label>
                <input asp-for="NewUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Connect.RoleId" class="control-label"></label>
                <select asp-for="Connect.RoleId" asp-items="@Model.RoleList" class="form-control">
                    <option value="">-- choose one --</option>
                </select>
                <span asp-validation-for="Connect.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
